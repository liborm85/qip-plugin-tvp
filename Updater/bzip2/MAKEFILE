!ifndef BROOT
BROOT = $(MAKEDIR)\..
!endif

# ZIP OPTIONS
ZIP=PKZIP.EXE
ZIPOPTIONS=-ex -P
UNZIP=PKUNZIP.EXE
ZIPFILE=BZIP2.ZIP
FILELIST=FILELIST.TXT

# COMPILER OPTIONS
DCC=$(BROOT)\BIN\DCC32.EXE

install:
        $(DCC) BZIP2.PAS
zipfile:
        $(ZIP) $(ZIPOPTIONS) $(ZIPFILE) @$(FILELIST)
clean:
        del *.dcu
        del *.zip
